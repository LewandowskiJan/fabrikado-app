{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["./../src/app/domain/*"],
      "@game/*": ["./src/game/*"],
      "@src/*": ["./src/*"]
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lib": ["es2018", "dom"]
}
